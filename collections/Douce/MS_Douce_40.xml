                  <msItem xml:id="MS_Douce_40-item1" n="1" class="#liturgica">
                     <title type="desc" key="work_10565">Book of Hours, Use of Rome</title>
                     <msItem n="1">
                        <locus>(fol.1 )</locus>
                        <note>Calendar with many saints</note>
                     </msItem>
                     <msItem n="2">
                        <locus>(fol. 13)</locus>
