                     <msItem n="5">
                        <locus>(fols. 150-9)</locus>
                        <title type="desc" key="work_14549">Homilies, Meditations and Prayers</title>
                        
                        <msItem n="5.1">
                           <incipit><hi rend="italic">Christum regem ascendentem in celum uenite adoremus</hi>.
                              Odiernus dies est dies ille quo Christo <note>[<hi rend="italic">sic</hi>]</note> celos ascendit </incipit>
                        </msItem>
                        
                        <msItem n="5.2">
                           <incipit><hi rend="italic">Estotes misericordes</hi> ... F. k. quia mundo quasi in
                              peregrinatione sumus </incipit>
                        </msItem>
                        
                        <msItem n="5.3">
                           <incipit><hi rend="italic">Ascendens Christus in altum</hi>
                              &amp;c. Considerandum est nobis f. quis ascenderet </incipit>
